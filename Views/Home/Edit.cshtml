@model Product
@{
    ViewData["Title"] = "Ürün Düzenleme Sayfası";
}

<form asp-controller="Home" asp-action="Edit" method="post" enctype="multipart/form-data" >
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for="ProductId">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control">
        <span asp-validation-for="Price"></span>
    </div>
    <div class="input-group mb-3">
        <input type="file" name="imageFile" id="imageFile" class="form-control">
    </div>
    <div>
        <img src="~/img/@Model.Image" alt="" style="width:  100px;">
        <input type="hidden" asp-for="@Model.Image">
    </div>
    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
            <option value="0">Seçiniz</option>
        </select>
        <span asp-validation-for="CategoryId"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Stock" class="form-label"></label>
        <input asp-for="Stock" class="form-control">
        <span asp-validation-for="Stock"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>